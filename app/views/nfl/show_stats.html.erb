<div class="input-group">
  <%= form_tag(show_stats_path, :method => "get", id: "search-form") do %>
    <%= text_field_tag :search, params[:search], placeholder: "Search Player", class: 'form-control' %>
    <span class="input-group-btn">
      <%= submit_tag "Search", class: 'btn btn-default' %>
    </span>
  <% end %>
</div>
<table id="table" class="table table-striped table-bordered table-sm">
  <thead>
    <tr>
      <% @headers.each do |header| %>
        <th class=<%= header %>>
        <%= header %> 
        <% if @sortable_cols.include?(header)%> 
          <%= link_to "↑", show_stats_path(stat: @stat, sort: 'acs', sort_col: header) %> 
          <%= link_to "↓", show_stats_path(stat: @stat, sort: 'desc', sort_col: header) %> 
        <% end %>
        </th>
      <% end %>
    </tr>
  </thead>
  <tbody>
    <% @data.each do |data| %>
      <tr>
        <% @headers.each do |stat| %>
            <td>
              <%= data[stat] %>
            </td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>
<%== pagy_bootstrap_nav(@pagy) %>