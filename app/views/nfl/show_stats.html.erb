<table id="table" class="table table-striped table-bordered table-sm" data-toggle="table" data-search="true" data-sortable="true" data-show-export="true">
  <thead>
    <tr>
      <% @headers.each do |header| %>
        <th data-field=<%= header %> <% if @sortable_cols.include?(header)%> data-sortable="true" <% end %>  <% unless @searchable_cols.include?(header)%> data-searchable="false" <% end %>> 
          <%= header %> 
        </th>
      <% end %>
    </tr>
  </thead>
  <tbody>
    <% @data.each do |data| %>
      <tr>
        <% @headers.each do |stat| %>
            <td>
              <%= data[stat] %>
            </td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>